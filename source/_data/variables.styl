$box-shadow = 0 2px 2px 0 rgba(0,0,0,.12), 0 3px 1px -2px rgba(0,0,0,.06), 0 1px 5px 0 rgba(0,0,0,.12), 0 -1px 0.5px 0 rgba(0,0,0,.09);
$box-shadow-hover = 0 2px 2px 0 rgba(0,0,0,.15), 0 3px 1px -2px rgba(0,0,0,.10), 0 1px 5px 0 rgba(0,0,0,.15), 0 -1px 0.5px 0 rgba(0,0,0,.13);
$box-shadow-inner = 0 2px 2px 0 rgba(0,0,0,.12), 0 3px 1px -2px rgba(0,0,0,.06), 0 1px 5px 0 rgba(0,0,0,.12), 0 -1px 0.5px 0 rgba(0,0,0,.09);
$border-radius = 16px!important;
$border-radius-inner = 0 0 16px 16px!important;
$btn-default-radius = 10px;

// $body-bg-color = #EAECEE;
$comment-bg-color = #fff;
$site-author-image-border-color = #ddd;
$b2t-bg-dark = $orange - 20%;
$b2t-bg = $blue+50%;
$blkquote-bg = #f6f6f6;
$blkquote-bg-dark = #262626;

:root {
    --comment-bg-color: $comment-bg-color;
    --b2t-bg-color: $b2t-bg;
    --blk-bg-color: $blkquote-bg;
}

if (hexo-config('darkmode')) {
    @media (prefers-color-scheme: dark) {
        :root {
            --b2t-bg-color:$b2t-bg-dark;
            --blk-bg-color: $blkquote-bg-dark;
        }
    }
}